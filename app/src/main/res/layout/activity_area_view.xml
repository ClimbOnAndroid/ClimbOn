<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/areaView"
    tools:context="cpp.example.phil.climbon.AreaView">
    <ImageView
        android:contentDescription="Picture of Park"
        android:layout_width="match_parent"
        android:fadingEdge="vertical"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/areaimage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionlabel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/areaimage"
        android:textStyle="bold"
        android:text="Description :"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/descriptionlabel"
        android:id="@+id/areadescription"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weblabel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/areadescription"
        android:textStyle="bold"
        android:text="Website :"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/weblabel"
        android:autoLink="web"
        android:id="@+id/website"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/routelabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/website"
        android:textStyle="bold"
        android:text="Routes :"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routelabel"
        android:id = "@+id/routelist"></ListView>

</RelativeLayout>
