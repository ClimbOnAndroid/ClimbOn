        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/route_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/routedescription"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
